{
  "name": "jonathanraftery/bullhorn-rest-client",
  "version": "1.0.0",
  "description": "Simple REST client for the Bullhorn API, including automated OAuth2 login",
  "keywords": [
    "bullhorn",
    "rest",
    "api",
    "client"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Jonathan Raftery",
      "email": "jonathan@jonathanraftery.com"
    }
  ],
  "minimum-stability": "stable",
  "scripts": {
    "test": "phpunit",
    "test:unit": "phpunit --group unit",
    "test:integration": "phpunit --group integration",
    "test:rest": "phpunit --testsuite rest-tests",
    "test:auth": "phpunit --testsuite auth-tests",
    "test:auth:unit": "phpunit --testsuite auth-tests --group unit",
    "test:auth:integration": "phpunit --testsuite auth-tests --group integration"
  },
  "require": {
    "php": "^7.3",
    "league/oauth2-client": "^2.5",
    "guzzlehttp/guzzle": "^7.2",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.4",
    "vlucas/phpdotenv": "^5.2"
  },
  "autoload": {
    "classmap": [
      "src/"
    ],
    "psr-4": {
      "jonathanraftery\\Bullhorn\\REST\\Client\\": "src/Client.php"
    }
  }
}
